# Environment Configuration
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3001

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000

# Authentication Configuration (BetterAuth)
NEXT_PUBLIC_AUTH_URL=http://localhost:3001

# AWS Configuration (for development with LocalStack)
NEXT_PUBLIC_AWS_ACCESS_KEY_ID=test
NEXT_PUBLIC_AWS_SECRET_ACCESS_KEY=test
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_ENDPOINT_URL=http://localhost:4566

# S3 Configuration
NEXT_PUBLIC_S3_BUCKET_ORIGINALS=pdf-originals
NEXT_PUBLIC_S3_BUCKET_DERIVATIVES=pdf-derivatives
NEXT_PUBLIC_S3_BUCKET_TEMP=pdf-temp
NEXT_PUBLIC_S3_BUCKET_REPORTS=pdf-reports

# Feature Flags
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false