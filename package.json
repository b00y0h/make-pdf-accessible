{
  "name": "make-pdf-accessible-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for PDF accessibility tools and services",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:web": "pnpm --filter=web dev",
    "dev:dashboard": "pnpm --filter=accesspdf-dashboard dev",
    "dev:frontend": "concurrently \"pnpm dev:web\" \"pnpm dev:dashboard\"",
    "dev:full": "pnpm dev && pnpm dev:frontend",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean && docker-compose down -v",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "asl-validator": "^4.0.0",
    "concurrently": "^8.2.2",
    "danger": "^13.0.4",
    "dotenv": "^17.2.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "msw": "^2.11.1",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4",
    "whatwg-node": "0.0.1-security"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "axios": "^1.13.5",
    "better-sqlite3": "^12.2.0",
    "node-fetch": "^3.3.2"
  },
  "pnpm": {
    "overrides": {
      "playwright": ">=1.55.1",
      "tar-fs@>=2.1.0 <2.1.4": ">=2.1.4",
      "tar-fs@>=3.0.0 <3.1.1": ">=3.1.1",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "jws": ">=3.2.3",
      "fast-xml-parser@>=5.0.9 <=5.3.3": ">=5.3.4",
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "@smithy/config-resolver": ">=4.4.0",
      "qs@<6.14.2": ">=6.14.2"
    }
  }
}
