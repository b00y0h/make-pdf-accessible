{
  "name": "make-pdf-accessible-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for PDF accessibility tools and services",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:web": "pnpm --filter=web dev",
    "dev:dashboard": "pnpm --filter=accesspdf-dashboard dev",
    "dev:frontend": "concurrently \"pnpm dev:web\" \"pnpm dev:dashboard\"",
    "dev:full": "pnpm dev && pnpm dev:frontend",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean && docker-compose down -v",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
